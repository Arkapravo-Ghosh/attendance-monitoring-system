[Unit]
Description=Starts Attendance Management System
After=network.target mysql.service

[Service]
Type=simple
User=ams
Group=ams
ExecStart=/usr/bin/watch -n 0.1 -t /opt/attendance-monitoring-system/src/fingerprint/ams-attendance.py
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target
